\RequirePackage{forest}
\forestset{
	Standardbaum/.style={
		s sep=+2em,
		l sep-=0.4em,
		font=\normalsize,
		draw,
		circle,
		inner sep=4pt,
		minimum width=2.4em,
	},
}
\newcommand{\Baum}[2][1]{%
	\scalebox{#1}{%
		\begin{forest}
			for tree={
				Standardbaum,
				Baum/.try,
			}
			#2
		\end{forest}
	}%
}

\tikzset{
	BBaumknoten/.style={
		draw,
		rectangle split,
		rectangle split horizontal,
		rectangle split ignore empty parts,
	},
	BBaumkante/.style={
		draw,
		->,
	},
	BBaum/.style={
		every node/.style={BBaumknoten},
		edge from parent/.style={BBaumkante},
		s dist={40mm}{20mm},
	},
	s dist/.style 2 args={
		level 1/.style={sibling distance=#1},
		level 2/.style={sibling distance=#2},
	}
}

